<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration>

<configuration debug="true">
    <contextName>test</contextName>

    <appender name="GELF" class="io.github.duoduobingbing.gelflogging4j.gelf.logback.GelfLogbackAppender">
        <graylogHost>test:localhost</graylogHost>
        <graylogPort>12201</graylogPort>

        <additionalLogFields>
            <staticLogField>
                <name>propertyField1</name>
                <literal>${user.language}</literal>
            </staticLogField>
            <staticLogField>
                <name>propertyField2</name>
                <literal>${myproperty}</literal>
            </staticLogField>
            <staticLogField>
                <name>propertyField3</name>
                <literal>${otherproperty:fallback}</literal>
            </staticLogField>
            <staticLogField>
                <name>propertyField4</name>
                <literal>embedded${myproperty}property</literal>
            </staticLogField>
        </additionalLogFields>

        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
    </appender>

    <root level="DEBUG">
        <appender-ref ref="GELF" />
    </root>
</configuration>
