<!DOCTYPE configuration>

<configuration>
    <contextName>test</contextName>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>
                %d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n
            </pattern>
        </encoder>
    </appender>
    <appender name="gelf" class="io.github.duoduobingbing.gelflogging4j.gelf.logback.GelfLogbackAppender">
        <host>kafka://localhost#log-topic</host>
        <port>19092</port>
        <version>1.1</version>
        <facility>gelf-logging4j</facility>
        <extractStackTrace>true</extractStackTrace>
        <filterStackTrace>true</filterStackTrace>
        <mdcProfiling>false</mdcProfiling>
        <timestampPattern>yyyy-MM-dd HH:mm:ss,SSS</timestampPattern>
        <maximumMessageSize>8192</maximumMessageSize>
        <kafkaLogTopic>kafka-log-topic</kafkaLogTopic>
        <kafkaProducerProperties>${classpath}/kafka/producer.properties</kafkaProducerProperties>

        <additionalLogFields>
            <!-- These are static fields -->
            <staticLogField>
                <name>fieldName1</name>
                <literal>fieldValue1</literal>
            </staticLogField>
            <staticLogField>
                <name>fieldName2</name>
                <literal>fieldValue2</literal>
            </staticLogField>
            <staticLogField>
                <name>myOriginHost</name>
                <literal>${HOSTNAME}</literal>
            </staticLogField>
            <!-- These are fields using MDC -->
            <mdcLogField>
                <mdc>mdcField1</mdc>
            </mdcLogField>
            <mdcLogField>
                <mdc>mdcField2</mdc>
            </mdcLogField>
        </additionalLogFields>

        <!-- Optional: Specify field types -->
        <additionalFieldTypes>fieldName1=String,fieldName2=Double,fieldName3=Long</additionalFieldTypes>

        <dynamicMdcFields>mdc.*,(mdc|MDC)fields</dynamicMdcFields>
        <includeFullMdc>true</includeFullMdc>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
    </appender>

    <root level="ALL">
        <appender-ref ref="gelf"/>
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
